
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the AppBarLayout overlay -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Add any customizations here -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Style for the Popup overlay -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Add any customizations here -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@color/colorPrimary</item>
        <item name="itemTextAppearanceInactive">@color/green</item>
    </style>
    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <!--    Phần này quyết định màu của đường viền TextInputLayout-->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#ffffff</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">#ffffff</item>
        <item name="android:theme">@style/exampleCursor</item>
    </style>

    <!--    Phần này quyết định màu con trỏ trong ô TextInputEditText-->
    <style name="exampleCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">#ffffff</item>
    </style>
    <!-- res/values/styles.xml -->

</resources>
