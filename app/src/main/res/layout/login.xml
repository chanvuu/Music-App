<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@color/black"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:srcCompat="@drawable/spotifylogin" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:lineSpacingExtra="8sp"
            android:text="Sẵn sàng trải nghiệm không gian âm nhạc sống động. "
            android:textAlignment="center"
            android:textColor="@color/design_default_color_surface"
            android:textSize="30sp"
            android:typeface="normal" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/black"
            android:scaleType="center"
            android:text="Đăng ký miễn phí"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:srcCompat="@drawable/oval_button" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/black"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/button_oval_white" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/black"
            app:srcCompat="@drawable/button_oval_white" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/black"
            app:srcCompat="@drawable/button_oval_white" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/black"
            app:srcCompat="@drawable/button_oval_white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="Đăng nhập"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>